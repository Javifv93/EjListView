<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearContacto">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Nuevo Contacto"
            android:textColor="@color/azulPalido"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/Act_crearContactos_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="@color/azulPalido"
            android:textSize="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/Act_crearContactos_et_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Javi"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/Act_crearContactos_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellidos"
            android:textColor="@color/azulPalido"
            android:textSize="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/Act_crearContactos_et_apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Fernández Vázquez"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/Act_crearContactos_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textColor="@color/azulPalido"
            android:textSize="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/Act_crearContactos_et_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Ej: 621632742"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/Act_crearContactos_tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/azulPalido"
            android:textSize="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/Act_crearContactos_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: emailPrueba@gmail.com"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/Act_crearContactos_tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textColor="@color/azulPalido"
            android:textSize="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/Act_crearContactos_et_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: C/calle X"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/Act_crearContactos_tv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observaciones"
            android:textColor="@color/azulPalido"
            android:textSize="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/Act_crearContactos_et_comentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: es un gilipollas"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/Act_crearContactos_butt_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>
        <Button
            android:id="@+id/Act_crearContactos_butt_volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>






    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>