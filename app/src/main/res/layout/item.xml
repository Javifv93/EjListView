<?xml version = "1.0" encoding = "utf-8"
    ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_margin = "10dp"
    android:background = "@color/azulPalidoClaro"
    android:orientation = "vertical"
    android:padding = "5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagenItem"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@mipmap/icono_msn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    <TextView
        android:id = "@+id/nombreItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor = "@color/BlancoAzulado"/>
    <TextView
        android:id = "@+id/apellidosItem"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:textColor = "@color/BlancoAzulado"/>
        <TextView
            android:id = "@+id/direccionItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor = "@color/BlancoAzulado"/>
        <TextView
            android:id = "@+id/emailItem"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:textColor = "@color/BlancoAzulado"/>
        <TextView
        android:id = "@+id/telefonoItem"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:textColor = "@color/BlancoAzulado"/>
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observaciones: "
        android:textStyle="bold"
        android:textColor = "@color/BlancoAzulado"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id = "@+id/comentariosItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor = "@color/BlancoAzulado"/>

</LinearLayout>